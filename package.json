{
	"name": "yume",
	"displayName": "Yume —— Galgame翻译助手",
	"description": "辅助汉化galgame的插件",
	"author": {
		"name": "miracleXL",
		"email": "1250036141@qq.com"
	},
	"version": "1.0.7",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"tags": [
		"galgame",
		"translate"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/miracleXL/yume"
	},
	"publisher": "miracleXL",
	"activationEvents": [
		"onView:yume.initView",
		"workspaceContains:.vscode/mydict.json",
		"workspaceContains:.vscode/yume-config.json"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Yume",
				"properties": {
					"yume.userAgent": {
						"type": "string",
						"default": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/69.0.3497.81 Safari/537.36",
						"description": "自定义查询网络词典时使用的UA"
					},
					"yume.百度API.api": {
						"type": "string",
						"default": "https://fanyi-api.baidu.com/api/trans/vip/translate",
						"description": "根据百度翻译开放平台要求设置"
					},
					"yume.百度API.appId": {
						"type": "string",
						"default": "",
						"description": "可在百度翻译开放平台注册账号获取"
					},
					"yume.百度API.appKey": {
						"type": "string",
						"default": "",
						"description": "与上方 app id 对应的密钥"
					},
					"yume.浮窗.开启行内查询": {
						"type": "boolean",
						"default": true,
						"description": "开启后可以浮窗显示当前行内最近查询过的词"
					},
					"yume.浮窗.需要选中": {
						"type": "boolean",
						"default": true,
						"description": "优先查询选中内容，关闭时自动选中vscode分词范围查询（即与Ctrl+D选中的范围一致）"
					},
					"yume.沪江词典.显示详细释义": {
						"type": "boolean",
						"default": true
					},
					"yume.原文行起始标志": {
						"type": "string",
						"default": "",
						"description": "正则表达式，从匹配到的标志后开始为原文内容"
					},
					"yume.译文行起始标志": {
						"type": "string",
						"default": "",
						"description": "正则表达式，从匹配到的标志后开始为译文内容"
					}
				}
			}
		],
		"commands": [
			{
				"command": "yume.init",
				"title": "初始化翻译助手"
			},
			{
				"command": "yume.reload",
				"title": "重新加载Yume"
			},
			{
				"command": "yume.jpdict",
				"title": "日语字典查询"
			},
			{
				"command": "yume.searchMydict",
				"title": "查询自定义词典"
			},
			{
				"command": "yume.addToMydict",
				"title": "添加至自定义词典"
			},
			{
				"command": "yume.deleteFromMydict",
				"title": "从自定义词典中删除"
			},
			{
				"command": "yume.editMydict",
				"title": "修改自定义词典"
			},
			{
				"command": "yume.translate",
				"title": "百度翻译"
			},
			{
				"command": "yume.scenario",
				"title": "简易设置"
			}
		],
		"keybindings": [
			{
				"command": "yume.jpdict",
				"key": "ctrl+alt+w"
			},
			{
				"command": "yume.translate",
				"key": "ctrl+alt+s"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "yume.init",
					"when": "explorerResourceIsFolder"
				}
			],
			"editor/context": [
				{
					"when": "editorLangId == plaintext && editorHasSelection",
					"command": "yume.jpdict",
					"group": "gta@1"
				},
				{
					"when": "editorLangId == plaintext",
					"command": "yume.searchMydict",
					"group": "gta@3"
				},
				{
					"when": "editorLangId == plaintext && editorHasSelection",
					"command": "yume.addToMydict",
					"group": "gta@2"
				},
				{
					"when": "editorLangId == plaintext",
					"command": "yume.deleteFromMydict",
					"group": "gta@2"
				},
				{
					"when": "editorLangId == plaintext",
					"command": "yume.editMydict",
					"group": "gta@2"
				},
				{
					"when": "editorLangId == plaintext && editorHasSelection",
					"command": "yume.translate",
					"group": "gta@0"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "yumeViews",
					"title": "Yume项目管理",
					"icon": "pic/view.png"
				}
			]
		},
		"views": {
			"yumeViews": [
				{
					"id": "yume.initView",
					"name": "初始化",
					"when": "!yume:init"
				},
				{
					"id": "yume.extension",
					"name": "插件管理",
					"when": "yume:init"
				},
				{
					"id": "yume.project",
					"name": "项目设置",
					"when": "yume:init"
				},
				{
					"id": "yume.sync",
					"name": "同步",
					"when": "yume:init"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "yume.initView",
				"contents": "请先初始化项目\n[初始化](command:yume.init)",
				"when": "!yume:init"
			},
			{
				"view": "yume.extension",
				"contents": "出现未知问题时，可尝试重新加载\n[重新加载Yume](command:yume.reload)",
				"when": "yume:init"
			},
			{
				"view": "yume.project",
				"contents": "暂未实现",
				"when": "yume:init"
			},
			{
				"view": "yume.sync",
				"contents": "暂未实现",
				"when": "yume:init"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"vscode:package": "vsce package",
		"compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/cheerio": "^0.22.23",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/request": "^2.48.5",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"cheerio": "^1.0.0-rc.5",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"request": "^2.88.2",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	}
}
