{
	"name": "yume",
	"displayName": "yume —— gal汉化助手",
	"description": "辅助汉化galgame的插件",
	"author": {
		"name": "miracleXL",
		"email": "1250036141@qq.com"
	},
	"version": "0.2.4",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"url": "https://wgaham.coding.net/p/gal-translate-assist/d/yume/git"
	},
	"publisher": "miracleXL",
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration":[
			{
				"title": "Yume",
				"properties": {
					"yume.userAgent": {
						"type": "string",
						"default": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/69.0.3497.81 Safari/537.36",
						"description": "自定义查询网络词典时使用的UA"
					},
					"yume.百度API.api": {
						"type":"string",
						"default":"https://fanyi-api.baidu.com/api/trans/vip/translate",
						"description": "根据百度翻译开放平台要求设置"
					},
					"yume.百度API.appId": {
						"type":"string",
						"default":"20200627000507662",
						"description": "可在百度翻译开放平台注册账号获取"
					},
					"yume.百度API.appKey": {
						"type": "string",
						"default": "MnwbdXNVP7WK837esfFU",
						"description": "与上方 app id 对应的密钥"
					},
					"yume.启用汉语字典": {
						"type": "boolean",
						"default": false,
						"description": "启用后可查询本地汉语字典"
					},
					"yume.启用汉语词典": {
						"type": "boolean",
						"default": false,
						"description": "启用后可查询本地汉语词典"
					},
					"yume.启用成语词典": {
						"type": "boolean",
						"default": false,
						"description": "启用后可查询本地成语词典"
					},
					"yume.启用歇后语": {
						"type": "boolean",
						"default": false,
						"description": "启用后可查询歇后语，用处不大且准确度不高，不建议开启"
					}
				}
			}
		],
		"commands": [
			{
				"command": "yume.reload",
				"title": "重新加载Yume"
			},
			{
				"command": "yume.jpdict",
				"title": "日语字典查询"
			},
			{
				"command": "yume.searchMydict",
				"title": "查询自定义词典"
			},
			{
				"command": "yume.addToMydict",
				"title": "添加至自定义词典"
			},
			{
				"command": "yume.translate",
				"title": "百度翻译"
			},
			{
				"command": "yume.chineseChar",
				"title": "查询汉字"
			},
			{
				"command": "yume.chineseWord",
				"title": "查询词语"
			},
			{
				"command": "yume.chineseIdiom",
				"title": "查询成语"
			},
			{
				"command": "yume.xiehouyu",
				"title": "查询歇后语"
			},
			{
				"command": "yume.chinese",
				"title": "汉语自动猜测查询"
			}
		],
		"keybindings": [
			{
				"command": "yume.jpdict",
				"key": "ctrl+alt+w",
				"when": "editorHasSelection"
			},
			{
				"command": "yume.translate",
				"key": "ctrl+alt+s",
				"when": "editorHasSelection"
			},
			{
				"command": "yume.chinese",
				"key": "ctrl+alt+x",
				"when": "editorHasSelection"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "yume.jpdict",
					"group": "gta@1"
				},
				{
					"when": "editorHasSelection",
					"command": "yume.searchMydict",
					"group": "gta@3"
				},
				{
					"when": "editorHasSelection",
					"command": "yume.addToMydict",
					"group": "gta@2"
				},
				{
					"when": "editorHasSelection",
					"command": "yume.chinese",
					"group": "gta@4"
				},
				{
					"when": "config.yume.启用汉语字典 && editorHasSelection",
					"command": "yume.chineseChar",
					"group": "gta@5"
				},
				{
					"when": "config.yume.启用汉语词典 && editorHasSelection",
					"command": "yume.chineseWord",
					"group": "gta@6"
				},
				{
					"when": "config.yume.启用成语词典 && editorHasSelection",
					"command": "yume.chineseIdiom",
					"group": "gta@7"
				},
				{
					"when": "config.yume.启用歇后语 && editorHasSelection",
					"command": "yume.xiehouyu",
					"group": "gta@8"
				},
				{
					"when": "editorHasSelection",
					"command": "yume.translate",
					"group": "gta@0"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/cheerio": "^0.22.23",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/request": "^2.48.5",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"cheerio": "^1.0.0-rc.5",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"request": "^2.88.2",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {}
}
