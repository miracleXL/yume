{
	"name": "yume",
	"displayName": "yume —— gal汉化助手",
	"description": "辅助汉化galgame的插件",
	"version": "0.2.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration":[
			{
				"title": "yume",
				"properties": {
					"yume.userAgent": {
						"type": "string",
						"default": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/69.0.3497.81 Safari/537.36",
						"description": "自定义查询网络词典时使用的UA"
					},
					"yume.百度API.api": {
						"type":"string",
						"default":"https://fanyi-api.baidu.com/api/trans/vip/translate",
						"description": "根据百度翻译开放平台要求设置"
					},
					"yume.百度API.appId": {
						"type":"string",
						"default":"20200627000507662",
						"description": "可在百度翻译开放平台注册账号获取"
					},
					"yume.百度API.appKey": {
						"type": "string",
						"default": "MnwbdXNVP7WK837esfFU",
						"description": "与上方 app id 对应的密钥"
					}
				}
			}
		],
		"commands": [
			{
				"command": "yume.jpdict",
				"title": "日语字典查询"
			},
			{
				"command": "yume.searchMydict",
				"title": "查询自定义词典"
			},
			{
				"command": "yume.addToMydict",
				"title": "添加至自定义词典"
			},
			{
				"command": "yume.translate",
				"title": "百度翻译"
			},
			{
				"command": "yume.load",
				"title": "加载配置"
			}
		],
		"keybindings": [
			{
				"command": "yume.jpdict",
				"key": "ctrl+alt+w",
				"when": "editorHasSelection"
			},
			{
				"command": "yume.translate",
				"key": "ctrl+alt+s",
				"when": "editorHasSelection"
			},
			{
				"command": "yume.addToMydict",
				"key": "ctrl+alt+a",
				"when": "editorHasSelection"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "yume.load",
					"group": "gta@0"
				},
				{
					"when": "editorHasSelection",
					"command": "yume.jpdict",
					"group": "gta@1"
				},
				{
					"when": "editorHasSelection",
					"command": "yume.searchMydict",
					"group": "gta@3"
				},
				{
					"when": "editorHasSelection",
					"command": "yume.addToMydict",
					"group": "gta@2"
				},
				{
					"when": "editorHasSelection",
					"command": "yume.translate",
					"group": "gta@4"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/cheerio": "^0.22.23",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/request": "^2.48.5",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"cheerio": "^1.0.0-rc.5",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"request": "^2.88.2",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {}
}
